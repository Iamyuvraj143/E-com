<h1>Welcome to E-com</h1>
   <% if Current.user %>
    Current User: <%= Current.user.email %><br>
  <% end %>
  <div class="row">
 <% @products.each do |product| %>
<div  class="card " style="width: 20rem;">
  <div class="card-img-top" >
     <%= image_tag(product.image, width: 200, height: 200) %>
   </div>
  <div class="card-body">
    <div class="card-title">
    <h5> <%= link_to product.name, product %> </h5></div>
    <p class="card-text"> <%= product.price %></p>
    <p class="card-text"> <%= truncate product.description, length: 70 %></p>
    <p> <% if product.quantity > 0 %>
             <h6 style="color:MediumSeaGreen;">In Stock</h6>
             <% else %>
             <h6 style="color:Tomato;">Out of Stock</h6>
             <% end %> </p>
     <% if Current.user %>
      <a href="#" class="btn btn-primary">Buy</a>
     <a href="#" class="btn btn-primary">Add to cart</a>
    <% else %>
    <%= link_to "Buy Now", sign_in_path, :class => 'btn btn-primary'  %>
    <%= link_to "Add to cart", sign_in_path, :class => 'btn btn-primary'  %>
    <% end %>
  </div>
</div>
<% end %>
</div>

<% if Current.user && Current.user.email=="admin@gmail.com" %>
  <h6> You are admin , can add more items</h6>
  <%= link_to "Add new product", new_product_path %>
<% else %>
<% end %>
