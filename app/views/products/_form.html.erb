<%= form_with model: @product do |form| %>
  <div class="container">
    
    <div>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
      <% @product.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.label :price %><br>
      <%= form.text_area :price %><br>
      <% @product.errors.full_messages_for(:price).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.label :quantity %><br>
      <%= form.text_area :quantity %><br>
      <% @product.errors.full_messages_for(:quantity).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.label :category %><br>
      <%= form.text_area :category %><br>
      <% @product.errors.full_messages_for(:category).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.label :description %><br>
      <%= form.text_area :description %><br>
      <% @product.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.label :photos %><br>
      <%= form.file_field :photos, multiple: true, accept: "image/x-png,image/gif,image/jpeg" %><br>
      <% @product.errors.full_messages_for(:photos).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
     <br> <%= form.submit %>
    </div>

  </div>
<% end %>
