<h1>Thank You for Shopping with us !!</h1>
<% @order_item.each do |item| %>
  <% product = Product.find(item.product_id) %>
  <div class="container">
    <h1>Order Succesfully Placed for <%= product.name %> </h1>
    <div class="card">
      <div class="card-body">
        <%= image_tag(product.photos[0], width: 200, height: 200) %>
        <p>Product Name : <%= product.name %></p>
        <p>Product Price: <%= product.price %></p>
        <p>Quantity: <%= item.quantity %></p>
        <p>Total amount to be paid at the time of delivery : <%= item.price %></p>
        <h4>status: <%= @order.status %></h4>
        <p>Order will get deliver at <%= @order.address %></p>
        <% unless @order.status == "delivered"%>
          <%= link_to "Cancel order", edit_order_path(@order), class:"btn btn-secondary" %>
        <% end %> 
      </div>
    </div>
  </div>
<% end %>
